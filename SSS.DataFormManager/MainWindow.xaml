<Window x:Class="SSS.DataFormManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SSS.DataFormManager"
        xmlns:models="clr-namespace:SSS.DataFormManager.Models"
        xmlns:datatemplates="clr-namespace:SSS.DataFormManager.Views.TemplateSelectors"
        xmlns:converters="clr-namespace:SSS.DataFormManager.Views.Converters"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:toolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
         xmlns:fa="clr-namespace:FontAwesome.WPF;assembly=FontAwesome.WPF"
        mc:Ignorable="d"
        FontFamily="Calibri"
        FontSize="11"
        Title="Data Form Manager" Loaded="Window_Loaded" SizeToContent="WidthAndHeight">
    <Window.Background>
        <ImageBrush ImageSource="Images/window-background.jpg" />
    </Window.Background>
    <Window.Resources>
        <SolidColorBrush x:Key="ComboBoxNormalBorderBrush" Color="#e3e9ef" />
        <SolidColorBrush x:Key="ComboBoxNormalBackgroundBrush" Color="#fff" />
        <SolidColorBrush x:Key="ComboBoxDisabledForegroundBrush" Color="#888" />
        <SolidColorBrush x:Key="ComboBoxDisabledBackgroundBrush" Color="#eee" />
        <SolidColorBrush x:Key="ComboBoxDisabledBorderBrush" Color="#888" />
        <ControlTemplate TargetType="ToggleButton" x:Key="ComboBoxToggleButtonTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="20" />
                </Grid.ColumnDefinitions>
                <Border Grid.ColumnSpan="2" Name="Border"
              BorderBrush="{StaticResource ComboBoxNormalBorderBrush}"
              CornerRadius="0" BorderThickness="1, 1, 1, 1"
              Background="{StaticResource ComboBoxNormalBackgroundBrush}" />
                <Border Grid.Column="1" Margin="1, 1, 1, 1" BorderBrush="#444" Name="ButtonBorder"
              CornerRadius="0, 0, 0, 0" BorderThickness="0, 0, 0, 0"
              Background="{StaticResource ComboBoxNormalBackgroundBrush}" />

                <Path Name="Arrow" Grid.Column="1"
            Data="M0,0 L0,2 L4,6 L8,2 L8,0 L4,4 z"
            HorizontalAlignment="Center" Fill="#444"
            VerticalAlignment="Center" />
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="UIElement.IsMouseOver" Value="True">
                    <Setter Property="Panel.Background" TargetName="ButtonBorder" Value="WhiteSmoke" />
                </Trigger>
                <Trigger Property="ToggleButton.IsChecked" Value="True">
                    <Setter Property="Panel.Background" TargetName="ButtonBorder" Value="WhiteSmoke" />
                    <Setter Property="Shape.Fill" TargetName="Arrow" Value="#FF8D979E" />
                </Trigger>
                <Trigger Property="UIElement.IsEnabled" Value="False">
                    <Setter Property="Panel.Background" TargetName="Border" Value="{StaticResource ComboBoxDisabledBackgroundBrush}" />
                    <Setter Property="Panel.Background" TargetName="ButtonBorder" Value="{StaticResource ComboBoxDisabledBackgroundBrush}" />
                    <Setter Property="Border.BorderBrush" TargetName="ButtonBorder" Value="{StaticResource ComboBoxDisabledBorderBrush}" />
                    <Setter Property="TextElement.Foreground" Value="{StaticResource ComboBoxDisabledForegroundBrush}" />
                    <Setter Property="Shape.Fill" TargetName="Arrow" Value="#999" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <Style x:Key="ComboBoxFlatStyle"  TargetType="{x:Type ComboBox}">
            <Setter Property="UIElement.SnapsToDevicePixels" Value="True" />
            <Setter Property="FrameworkElement.OverridesDefaultStyle" Value="True" />
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto" />
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
            <Setter Property="ScrollViewer.CanContentScroll" Value="True" />
            <Setter Property="TextElement.Foreground" Value="Black" />
            <Setter Property="FrameworkElement.FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton Name="ToggleButton" Grid.Column="2"
                            ClickMode="Press" Focusable="False"
                            IsChecked="{Binding Path=IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                            Template="{StaticResource ComboBoxToggleButtonTemplate}" />
                            <ContentPresenter Name="ContentSite" Margin="5, 3, 23, 3" IsHitTestVisible="False"
                              HorizontalAlignment="Left" VerticalAlignment="Center"
                              Content="{TemplateBinding ComboBox.SelectionBoxItem}"
                              ContentTemplate="{TemplateBinding ComboBox.SelectionBoxItemTemplate}"
                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}" />
                            <TextBox Name="PART_EditableTextBox" Margin="3, 3, 23, 3"
                             IsReadOnly="{TemplateBinding IsReadOnly}"
                             Visibility="Hidden" Background="Transparent"
                             HorizontalAlignment="Left" VerticalAlignment="Center"
                             Focusable="True">
                                <TextBox.Template>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border Name="PART_ContentHost" Focusable="False" />
                                    </ControlTemplate>
                                </TextBox.Template>
                            </TextBox>
                            <Popup Name="Popup" Placement="Bottom"
                               Focusable="False" AllowsTransparency="True"
                               IsOpen="{TemplateBinding ComboBox.IsDropDownOpen}"
                               PopupAnimation="Slide">
                                <Grid Name="DropDown" SnapsToDevicePixels="True"
                                MinWidth="{TemplateBinding FrameworkElement.ActualWidth}"
                                MaxHeight="{TemplateBinding ComboBox.MaxDropDownHeight}">
                                    <Border Name="DropDownBorder" Background="White" Margin="0, 1, 0, 0"
                                    CornerRadius="0" BorderThickness="1,1,1,1"
                                    BorderBrush="{StaticResource ComboBoxNormalBorderBrush}" />
                                    <ScrollViewer Margin="4" SnapsToDevicePixels="True">
                                        <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained" />
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="ItemsControl.HasItems" Value="False">
                                <Setter Property="FrameworkElement.MinHeight" TargetName="DropDownBorder" Value="95" />
                            </Trigger>
                            <Trigger Property="UIElement.IsEnabled" Value="False">
                                <Setter Property="TextElement.Foreground" Value="{StaticResource ComboBoxDisabledForegroundBrush}" />
                            </Trigger>
                            <Trigger Property="ItemsControl.IsGrouping" Value="True">
                                <Setter Property="ScrollViewer.CanContentScroll" Value="False" />
                            </Trigger>
                            <Trigger Property="ComboBox.IsEditable" Value="True">
                                <Setter Property="KeyboardNavigation.IsTabStop" Value="False" />
                                <Setter Property="UIElement.Visibility" TargetName="PART_EditableTextBox" Value="Visible" />
                                <Setter Property="UIElement.Visibility" TargetName="ContentSite" Value="Hidden" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="rowStyle" TargetType="DataGridRow">
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Background" Value="Black" />
        </Style>

        <Style x:Key="cellStyle" TargetType="DataGridCell">
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="2" />
            <Setter Property="Background" Value="Black" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="Black" BorderThickness="0">
                            <Border x:Name="border"
                              BorderBrush="White"
                              BorderThickness="2"
                              Background="Black"
                              CornerRadius="5">
                                <ContentPresenter />
                            </Border>
                        </Border>
                        <ControlTemplate.Triggers>
                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsSelected}" Value="true">
                                <Setter TargetName="border" Property="Background" Value="Orange" />
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate x:Key="DefaultControlTemplate">
            <TextBox Margin="0"  Text=""  MinWidth="50" Height="Auto" Background="LightYellow" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" />
        </DataTemplate>
        <DataTemplate x:Key="TextBoxControlTemplate">
            <TextBox Margin="0"  Text="{Binding LabelValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  MinWidth="50" Height="Auto" Background="LightYellow" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" />
        </DataTemplate>
        <DataTemplate x:Key="TextBlockControlTemplate">
            <TextBox Margin="0" Text="{Binding LabelValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" MinWidth="50" Background="LightYellow" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" />
        </DataTemplate>
        <DataTemplate x:Key="TextBoxControlEditingTemplate">
            <TextBox Margin="0"  Text="{Binding TextBoxControlEditorValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     MinWidth="50" Height="Auto" Background="LightYellow" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" />
        </DataTemplate>
        <DataTemplate x:Key="TextBoxControlValueTemplate">
            <Label Margin="0"  Content="{Binding TextBoxControlValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                   MinWidth="50" Height="Auto"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
        </DataTemplate>
        <DataTemplate x:Key="ListBoxControlEditingTemplate">
            <ListBox ItemsSource="{Binding ListBoxItemsSource, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                     SelectedItem="{Binding ListBoxSelectedItem, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     SelectedIndex="{Binding ListBoxSelectedIndex, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     IsSynchronizedWithCurrentItem="True"
                     Margin="0" MinWidth="50" MinHeight="100"
                     Background="LightYellow" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" />
        </DataTemplate>
        <DataTemplate x:Key="ListBoxControlValueTemplate">
            <Label Content="{Binding ListBoxControlValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                   Margin="0" MinWidth="50" Height="Auto"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
        </DataTemplate>
        <DataTemplate x:Key="ComboBoxControlEditingTemplate">
            <ComboBox ItemsSource="{Binding ComobBoxItemsSource, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      SelectedItem="{Binding ComboBoxSelectedItem, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      SelectedIndex="{Binding ComboBoxSelectedIndex, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      Margin="0" MinWidth="50"
                      Background="LightYellow" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" />
        </DataTemplate>
        <DataTemplate x:Key="ComboBoxControlValueTemplate">
            <Label Content="{Binding ComboBoxControlEditorValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                   Margin="0"  MinWidth="50" Height="Auto" Background="LightYellow" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
        </DataTemplate>
        <DataTemplate x:Key="DatePickerControlEditingTemplate">
            <DatePicker Margin="0" MinWidth="50" Background="LightYellow" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" />
        </DataTemplate>
        <DataTemplate x:Key="DatePickerControlValueTemplate">
            <Label Content="{Binding DatePickerControlEditorValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                   Margin="0"  MinWidth="50" Height="Auto" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" />
        </DataTemplate>

        <DataTemplate x:Key="TextBlockControlViewTemplate">
            <StackPanel Orientation="Vertical">
                <Label Content="{Binding LabelValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                       Margin="0" MinWidth="50" VerticalAlignment="Center" HorizontalAlignment="Right" HorizontalContentAlignment="Right" FontWeight="Bold" />
                <Line Stroke="DarkSlateGray" HorizontalAlignment="Stretch" Margin="0, 0, 0, 1" VerticalAlignment="Bottom"
                              X2="{Binding ActualWidth, RelativeSource={RelativeSource Self}}"
                              StrokeDashArray="1 1" StrokeThickness="1" />
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="LabelControlViewTemplate">
            <StackPanel Orientation="Vertical">
                <Label Content="{Binding LabelValue, UpdateSourceTrigger=PropertyChanged}"
                    Margin="0" MinWidth="50" Height="Auto" VerticalAlignment="Stretch" HorizontalAlignment="Right" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" Background="Transparent" />
                <Line Stroke="DarkSlateGray" HorizontalAlignment="Stretch" Margin="0, 0, 0, 1" VerticalAlignment="Bottom"
                              X2="{Binding ActualWidth, RelativeSource={RelativeSource Self}}"
                              StrokeDashArray="1 1" StrokeThickness="1" />
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="TextBoxControlValueViewerTemplate">
            <StackPanel Orientation="Vertical">
                <Label Content="{Binding TextBoxControlValue, UpdateSourceTrigger=PropertyChanged}"
                   Margin="0" MinWidth="50" Height="Auto" VerticalAlignment="Stretch" HorizontalAlignment="Left" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Background="Transparent" />
                <Line Stroke="DarkSlateGray" HorizontalAlignment="Stretch" Margin="0, 0, 0, 1" VerticalAlignment="Bottom"
                              X2="{Binding ActualWidth, RelativeSource={RelativeSource Self}}"
                              StrokeDashArray="1 1" StrokeThickness="1" />
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="ListBoxControlValueViewerTemplate">
            <Label Content="{Binding ListBoxControlValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Margin="0" MinWidth="50" VerticalAlignment="Stretch" HorizontalAlignment="Right" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" />
        </DataTemplate>

        <DataTemplate x:Key="ComboBoxControlValueViewerTemplate">
            <Label Content="{Binding ComboBoxControlEditorValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                   Margin="0" MinWidth="50" Height="Auto" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />
        </DataTemplate>

        <DataTemplate x:Key="DatePickerControlValueViewerTemplate">
            <Label Content="{Binding DatePickerControlEditorValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                   Margin="0"  MinWidth="50" Height="Auto" Background="LightYellow" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" />
        </DataTemplate>

        <Style  x:Key="DataGridRowStyle" TargetType="{x:Type DataGridRow}">
            <Style.Resources>
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent" />
                <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="Transparent" />
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black" />
                <SolidColorBrush x:Key="{x:Static SystemColors.ControlTextBrushKey}" Color="Black" />
            </Style.Resources>
        </Style>

        <Style TargetType="DataGridCell">
            <Style.Setters>
                <Setter Property="VerticalContentAlignment" Value="Center" />
                <Setter Property="Margin" Value="2,0,0,0" />
                <Setter Property="BorderThickness" Value="0" />
            </Style.Setters>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="BorderBrush" Value="DodgerBlue"></Setter>
                    <Setter Property="BorderThickness" Value="2"></Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Style.Setters>
                <Setter Property="MinWidth" Value="100"></Setter>
                <Setter Property="FontWeight" Value="Bold"></Setter>
                <Setter Property="HorizontalContentAlignment" Value="Center" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
                <Setter Property="Padding" Value="5" />
                <Setter Property="Margin" Value="0, 2, 1, 2" />
            </Style.Setters>
        </Style>
        <converters:ObjectTypeToNameConverter x:Key="ObjectTypeToNameConverter" />
        <converters:NewItemTypesComboBoxConverter x:Key="NewItemTypesComboBoxConverter" />
        <converters:GuidToStringConverter x:Key="GuidToStringConverter" />
        <converters:DataGridRowNumberConverter x:Key="DataGridRowNumberConverter" />
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>
    <Grid Margin="0" HorizontalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0" Grid.Column="0" VerticalAlignment="Stretch" HorizontalAlignment="Center" Margin="15, 0, 0, 0" Background="#454545">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Grid.ColumnSpan="4" BorderBrush="Gray" BorderThickness="0.5, 0.5, 0.5, 0.5" Margin="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <Label Content="D A T A  F O R M  D E S I G N E R" HorizontalContentAlignment="Center" FontSize="20" Margin="0" FontWeight="Bold" Foreground="White"></Label>
            </Border>
            <Label Grid.Row="1" Grid.Column="0"  Grid.ColumnSpan="4" Content="{Binding FormTitle}" HorizontalContentAlignment="Center" FontSize="14" Margin="0"  Foreground="WhiteSmoke"></Label>

            <Border Grid.Row="2" Grid.ColumnSpan="4" BorderBrush="Gray" BorderThickness="0.5, 0.5, 0.5, 0.5" Margin="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <Grid Margin="10, 0, 10, 0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Row="0" Grid.ColumnSpan="4" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" CornerRadius="10" BorderBrush="Gray" Margin="0, 2, 0,0" BorderThickness="1" Background="DodgerBlue">
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="F O R M  H E A D E R" FontSize="12" Margin="15,2,15,0" Foreground="White" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Headers -->
                    <Border Grid.Row="1" Grid.Column="0" CornerRadius="10" BorderBrush="Gray" Margin="10, 2, 0, 0" BorderThickness="1" Background="White">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                            <TextBlock Text="Form Type" HorizontalAlignment="Right" Margin="10,0,10,0" FontWeight="Bold" VerticalAlignment="Center"></TextBlock>
                        </StackPanel>
                    </Border>
                    <Border Grid.Row="2" Grid.Column="0" CornerRadius="10" BorderBrush="Gray" Margin="10, 2, 0, 0" BorderThickness="1" Background="White">
                        <TextBlock  Text="Form Title" HorizontalAlignment="Right" Margin="10,0,10,0"  FontWeight="Bold" VerticalAlignment="Center"></TextBlock>
                    </Border>
                    <Border Grid.Row="2" Grid.Column="2" CornerRadius="10" BorderBrush="Gray" Margin="10, 2, 0, 0" BorderThickness="1" Background="White">
                        <TextBlock Text="Display Header" HorizontalAlignment="Right" Margin="10,0,10,0" FontWeight="Bold" VerticalAlignment="Center"></TextBlock>
                    </Border>

                    <Border Grid.Row="3" Grid.Column="0" CornerRadius="10" BorderBrush="Gray" Margin="10, 2, 0, 0" BorderThickness="1" Background="White">
                        <TextBlock Text="Description" HorizontalAlignment="Right" Margin="10,0,10,0"  FontWeight="Bold" VerticalAlignment="Center"></TextBlock>
                    </Border>
                    <Border Grid.Row="4" Grid.Column="0" CornerRadius="10" BorderBrush="Gray" Margin="10, 2, 0, 0" BorderThickness="1" Background="White">
                        <TextBlock Text="Category" HorizontalAlignment="Right" Margin="10,0,10,0"  FontWeight="Bold" VerticalAlignment="Center"></TextBlock>
                    </Border>
                    <Border Grid.Row="4" Grid.Column="2" CornerRadius="10" BorderBrush="Gray" Margin="10, 2, 0, 0" BorderThickness="1" Background="White">
                        <TextBlock Text="Sub-category" HorizontalAlignment="Right" Margin="10,0,10,0"  FontWeight="Bold" VerticalAlignment="Center"></TextBlock>
                    </Border>
                    <Border Grid.Row="5" Grid.Column="0" CornerRadius="10" BorderBrush="Gray" Margin="10, 2, 0, 2" BorderThickness="1" Background="White">
                        <TextBlock Text="Captured By" HorizontalAlignment="Right" Margin="10,0,10,0"  FontWeight="Bold" VerticalAlignment="Center"></TextBlock>
                    </Border>

                    <!-- Values -->
                    <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
                        <ComboBox Text="" HorizontalAlignment="Left" Margin="5, 1, 0, 0" Padding="3" Width="150" Height="20"
                             HorizontalContentAlignment="Left" VerticalContentAlignment="Center"
                            ItemsSource="{Binding Path=DataFormTypes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            DisplayMemberPath="FormTypeName"
                            SelectedValuePath="FormTypeName"
                            SelectedValue="{Binding CurrentDataFormTypeSelection.FormTypeName}"
                            SelectedItem="{Binding CurrentDataFormTypeSelection, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Background="White" ></ComboBox>
                        <Button Width="18"  Height="18" Margin="1,1,0,0"  HorizontalAlignment="Right" VerticalAlignment="Center" Background="White" BorderThickness="0"
                                Command="{Binding DataContext.AddFormTypeCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}, Mode=FindAncestor}}"
                                CommandParameter="{Binding ., Mode=TwoWay, RelativeSource={RelativeSource AncestorType={x:Type Window}, Mode=FindAncestor}, UpdateSourceTrigger=PropertyChanged}"
                                ToolTip="Add a form type">
                            <Button.Content>
                                <fa:ImageAwesome Icon="PlusSquare" VerticalAlignment="Center" Width="18" Height="18"  HorizontalAlignment="Center" Foreground="Green"  Margin="0" />
                            </Button.Content>
                        </Button>
                        <Button Width="18"  Height="18" Margin="1,1,0,0"  HorizontalAlignment="Right" VerticalAlignment="Center" Background="White" BorderThickness="0"
                                Command="{Binding DataContext.RemoveFormTypeCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}, Mode=FindAncestor}}"
                                CommandParameter="{Binding ., Mode=TwoWay, RelativeSource={RelativeSource AncestorType={x:Type Window}, Mode=FindAncestor}, UpdateSourceTrigger=PropertyChanged}"
                                ToolTip="Remove a form type">
                            <Button.Content>
                                <fa:ImageAwesome Icon="MinusSquareOutline" VerticalAlignment="Center" Width="18" Height="18" HorizontalAlignment="Center" Foreground="Green"  Margin="0" />
                            </Button.Content>
                        </Button>
                    </StackPanel>
                    <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding FormTitle, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Stretch" VerticalAlignment="Center" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center" Margin="5, 1, 0, 0"  MinWidth="150" Height="20"></TextBox>
                    <TextBox Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" Text="{Binding FormDescription, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Center" Margin="5, 1, 0, 0" Height="20"></TextBox>
                    <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal">
                        <ComboBox HorizontalAlignment="Left" Margin="5, 1, 0, 0" Width="150" Height="20"
                                  Padding="3"
                                HorizontalContentAlignment="Left"
                                ItemsSource="{Binding Path=DataFormCategories}"
                                DisplayMemberPath="CategoryName"
                                SelectedValuePath="CategoryName"
                                SelectedValue="{Binding CurrentCategorySelection.CategoryName}"
                                SelectedItem="{Binding CurrentCategorySelection}"
                                SelectedIndex="{Binding CurrentCategorySelectedIndex, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></ComboBox>
                        <Button Width="18"  Height="18" Margin="1,1,0,0"  HorizontalAlignment="Right" VerticalAlignment="Center" Background="White"  BorderThickness="0"
                                Command="{Binding DataContext.AddCategoryCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}, Mode=FindAncestor}}"
                                CommandParameter="{Binding ., Mode=TwoWay, RelativeSource={RelativeSource AncestorType={x:Type Window}, Mode=FindAncestor}, UpdateSourceTrigger=PropertyChanged}"
                                ToolTip="Add a category">
                            <Button.Content>
                                <fa:ImageAwesome Icon="PlusSquare" Rotation="270" VerticalAlignment="Center" Width="18" Height="18" HorizontalAlignment="Center" Foreground="Green"  Margin="0" />
                            </Button.Content>
                        </Button>
                        <Button Width="18"  Height="18" Margin="1,1,0,0"  HorizontalAlignment="Right" VerticalAlignment="Center" Background="White"  BorderThickness="0"
                                Command="{Binding DataContext.RemoveCategoryCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}, Mode=FindAncestor}}"
                                CommandParameter="{Binding ., Mode=TwoWay, RelativeSource={RelativeSource AncestorType={x:Type Window}, Mode=FindAncestor}, UpdateSourceTrigger=PropertyChanged}"
                                ToolTip="Remove a category">
                            <Button.Content>
                                <fa:ImageAwesome Icon="MinusSquareOutline" VerticalAlignment="Center" Width="18" Height="18"  HorizontalAlignment="Center" Foreground="Green"  Margin="0" />
                            </Button.Content>
                        </Button>
                        <Button Width="18"  Height="18" Margin="1,1,0,0"  HorizontalAlignment="Right" VerticalAlignment="Center" Background="White"  BorderThickness="0"
                                Command="{Binding DataContext.UpdateCategoryCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}, Mode=FindAncestor}}"
                                CommandParameter="{Binding ., Mode=TwoWay, RelativeSource={RelativeSource AncestorType={x:Type Window}, Mode=FindAncestor}, UpdateSourceTrigger=PropertyChanged}"
                                ToolTip="Remove a category">
                            <Button.Content>
                                <fa:ImageAwesome Icon="MinusSquareOutline" VerticalAlignment="Center" Width="18" Height="18"  HorizontalAlignment="Center" Foreground="Green"  Margin="0" />
